<%  title "Reset Password" %>
<div class="bs-docs-section">
	<div class="page-header">

		<div class="row">
			<div class="col-lg-6 col-lg-offset-3">
				<h2>Forgot Your Password?</h2>
			</div>
		</div>

		<br>
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3">
				<div class="well">

					<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					<%= devise_error_messages! %>

					<%= f.email_field :email, label: "Email", placeholder: "Email",
					help: "Can't be blank", icon: "envelope", autofocus: true %>

					<div class="row">
						<div class="col-lg-4 text-center">
							<%= f.submit "Reset my password", class: "btn btn-block btn-primary" %>
						</div>
					</div>
					<% end %>

					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>

	</div>
</div>
