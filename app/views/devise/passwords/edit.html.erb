<%  title "Reset password" %>
<div class="bs-docs-section">
  <div class="page-header">

    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <h2>Change Your Password</h2>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <div class="well">
          <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

          <%= devise_error_messages! %>

          <%= f.hidden_field :reset_password_token %>

          <%= f.password_field :password, label: "New Password", autofocus: true, icon: "pencil",
          autocomplete: "off", placeholder: "New Password" %>

          <%= f.password_field :password_confirmation, label: "New Password Again!", icon: "pencil", autocomplete: "off", placeholder: "New Password Again!" %>

          <div class="row">
            <div class="col-lg-4 text-center">
              <%= f.submit "Change my password", class: "btn btn-block btn-primary" %>
            </div>
          </div>

          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>


  </div>
</div>
