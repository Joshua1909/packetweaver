<%  title "Resend Confirmation" %>
<div class="bs-docs-section">
	<div class="page-header">

		<div class="row">
			<div class="col-lg-6 col-lg-offset-3">
				<h2>Resend Confirmation Instructions</h2>
			</div>
		</div>

		<br>
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3">
				<div class="well">
					<%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

					<%= devise_error_messages! %>


					<%= f.email_field :email, autofocus: true, label: "Email", placeholder: "Email",
					help: "Can't be blank", icon: "envelope", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>

					<div class="row">
					<div class="col-lg-5 text-center">
							<%= f.submit "Resend confirmation instructions", class: "btn btn-block btn-primary" %>
						</div>
					</div>

					<% end %>
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>


	</div>
</div>
